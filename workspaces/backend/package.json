{
  "name": "backend",
  "private": "true",
  "version": "1.0.0",
  "license": "MIT",
  "dependencies": {
    "@aws-lambda-powertools/logger": "^1.5.0",
    "@aws-sdk/client-dynamodb": "^3.254.0",
    "@aws-sdk/client-secrets-manager": "^3.250.0",
    "@aws-sdk/client-sns": "^3.252.0",
    "@aws-sdk/client-ssm": "^3.245.0",
    "@aws-sdk/util-dynamodb": "^3.254.0",
    "@jm18457/kafkajs-msk-iam-authentication-mechanism": "^2.0.3",
    "@middy/core": "^4.0.10",
    "@middy/http-cors": "^4.0.10",
    "@middy/http-error-handler": "^4.0.10",
    "@middy/http-json-body-parser": "^4.0.10",
    "cognito-at-edge": "^1.3.1",
    "dotenv": "^16.0.3",
    "json-schema-to-typescript": "^11.0.2",
    "jsonschema": "^1.4.1",
    "jwt-decode": "^3.1.2",
    "kafkajs": "^2.2.3",
    "shared-utils": "1.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@serverless/typescript": "^3.25.0",
    "@types/aws-lambda": "^8.10.109",
    "@types/jest": "^29.2.5",
    "@types/uuid": "^9.0.0",
    "esbuild": "^0.16.15",
    "json-schema-to-typescript": "^11.0.2",
    "serverless": "^3.26.0",
    "serverless-dynamodb-local": "^0.2.40",
    "serverless-esbuild": "^1.37.0",
    "serverless-lambda-edge-pre-existing-cloudfront": "^1.2.0",
    "serverless-offline": "^12.0.4",
    "serverless-offline-sns": "^0.76.0",
    "serverless-plugin-scripts": "^1.0.2",
    "ts-jest": "^29.0.5"
  },
  "scripts": {
    "deploy:auth": "serverless deploy --stage dev --config serverlessAuth.ts",
    "deploy:topicManager": "serverless deploy --stage dev --config serverlessTopicManager.ts",
    "deploy:webApi": "serverless deploy --stage dev --config serverlessWebApi.ts",
    "deploy": "serverless deploy --stage dev",
    "destroy:auth": "serverless remove --stage dev --config serverlessAuth.ts",
    "destroy:topicManager": "serverless remove --stage dev --config serverlessTopicManager.ts",
    "destroy:webApi": "serverless remove --stage dev --config serverlessWebApi.ts",
    "destroy": "serverless remove --stage dev",
    "eslint:check": "eslint .",
    "generate:types": "ts-node scripts/tsFromJsonSchema.ts",
    "generate:types:watch": "nodemon -w json-schemas scripts/tsFromJsonSchema.ts",
    "install:db": "serverless dynamodb install",
    "lint": "yarn run prettier:check && yarn run eslint:check",
    "prettier:check": "prettier . --check",
    "run:topicManager": "serverless invoke --function topicManager --stage dev --config serverlessTopicManager.ts",
    "start:webApi": "POWERTOOLS_DEV=1 DISABLE_PRIVATE_APIS=1 serverless offline start --config serverlessWebApi.ts --httpPort 4000 --lambdaPort 4002",
    "start:backend": "POWERTOOLS_DEV=1 serverless offline start",
    "start:consumers": "ts-node ./localKafkaConsumer.ts",
    "start": "concurrently -n \"backend,webApi\" \"yarn run start:backend\" \"yarn run start:webApi\"",
    "test:watch": "jest --watch",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  }
}
